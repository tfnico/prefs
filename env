ANT_HOME=/Developer/ant/current
MVN_HOME=/Developer/maven/current
GRAILS_HOME=/Developer/grails/current
GRIFFON_HOME=/Developer/griffon/current
CLOJURESCRIPT_HOME=/Developer/clojurescript/current
PG_HOME=/Library/PostgreSQL/8.4
FLASH_PLAYER="/Applications/Flash Player Debugger.app/Contents/MacOS/"

APPS=$MVN_HOME/bin:$ANT_HOME/bin:$GRAILS_HOME/bin:$GRIFFON_HOME/bin:$CLOJURESCRIPT_HOME/bin:$PG_HOME/bin:$FLASH_PLAYER

# Note that we put /usr/local/bin in front of normal $PATH due to homebrew
PATH=~/bin:$APPS:/usr/local/bin:$PATH

# And git OSX installer has a special place:
PATH=/usr/local/git/bin:$PATH

export TERM=xterm-256color
export EDITOR=vim

export MAVEN_OPTS="-XX:MaxPermSize=256m -Xmx1024m"

# Fix for iterm2's encoding.
export LC_ALL="en_US.UTF-8"

alias pb=pbcopy
