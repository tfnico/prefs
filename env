ANT_HOME=/Developer/ant/current
MVN_HOME=/Developer/maven/current
GIT_HOME=/usr/local/git
GRAILS_HOME=/Developer/grails/current
GRADLE_HOME=/Developer/gradle/current
GRIFFON_HOME=/Developer/griffon/current
CLOJURESCRIPT_HOME=/Developer/clojurescript/current
PG_HOME=/Library/PostgreSQL/8.4
FLASH_PLAYER="/Applications/Flash Player Debugger.app/Contents/MacOS"
AIR_SDK=/Developer/AdobeAIRSDK
SBT_HOME=/Developer/sbt

APPS=$SBT_HOME/bin:$GIT_HOME/bin:$GRADLE_HOME/bin:$MVN_HOME/bin:$ANT_HOME/bin:$GRAILS_HOME/bin:$GRIFFON_HOME/bin:$CLOJURESCRIPT_HOME/bin:$PG_HOME/bin:$FLASH_PLAYER:$AIR_SDK/bin

# Note that we put /usr/local/bin in front of normal $PATH due to homebrew
PATH=~/bin:~/company-bin:$APPS:/usr/local/bin:$PATH

# Add NPM packages to node's path:
export NODE_PATH=/usr/local/lib/node_modules

# Detect and use macvim on OSX:
case $OSTYPE in darwin*) alias vim=/Applications/MacVim.app/Contents/MacOS/Vim ;; esac

export TERM=xterm-256color
export EDITOR=vim

export MAVEN_OPTS="-XX:MaxPermSize=256m -Xmx1024m"

# Fix for iterm2's encoding.
export LC_ALL="en_US.UTF-8"

# For my chromium launcher
export CHROMIUM_APP=/Developer/chromium/current

alias pb=pbcopy

