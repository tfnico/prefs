test -r /sw/bin/init.sh && . /sw/bin/init.sh
alias ll="ls -la"
alias pp="ps aux"
alias pjava="pp | grep java"

export EDITOR=vim

export ANT_HOME=/Developer/ant
export M2_HOME=/Developer/maven
export JAVA_HOME=/Developer/java/Home
export GRAILS_HOME=/Developer/grails
export POSTGRES_HOME=/Library/PostgreSQL/8.3
export SCALA_HOME=/Developer/scala

APPLICATION_BIN_FOLDERS=$JAVA_HOME/Commands:$M2_HOME/bin:$ANT_HOME/bin:$GRAILS_HOME/bin:$POSTGRES_HOME/bin:$SCALA_HOME/bin

#Application parameters
#export JAVA_OPTS="-Xms128m -Xmx512m -XX:MaxPermSize=128m -Djava.awt.headless=true"
export ANT_OPTS="-Xmx1024m -XX:MaxPermSize=256m -Djava.awt.headless=true"
export MAVEN_OPTS=-Xmx768m

export PATH=~/bin:$APPLICATION_BIN_FOLDERS:/usr/local/bin:$PATH
export PS1='\u@\[\e[31;1m\]\h:\[\e[0m\]\w\[\e[0m\]/>\[\e[0m\]'

