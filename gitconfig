	name = Thomas Ferris Nicolaisen
	email = tfnico@gmail.com
[alias]
   st = status
   co = checkout
   ci = commit
   b = branch
   upci = !git update-ref refs/remotes/$(git branch | grep '^*' | awk '{print $2}') refs/remotes/origin/$(git branch|grep '^*'|awk '{print $2}') && git svn dcommit
   upcido = !git update-ref refs/remotes/git-svn refs/remotes/origin/master && git svn dcommit
   logv = log --name-only
   showv = show --name-only
   cp = cherry-pick -e

[apply]
   whitespace = nowarn
[color]
   ui = auto
[core]
	editor = /usr/bin/vim
[diff]
	tool = diffmerge
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
	trustexitcode = true
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
